@model IEnumerable<TuHotelEnLinea.Models.PackageExtra>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Package)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Extra)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Package.PackageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Extra.ExtraDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PackageExtraId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PackageExtraId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PackageExtraId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
